.no-title .icon-basemap-container{
    top: $no-title-top + 100;
}
.no-title.no-home .icon-basemap-container{
    top: $no-title-top + 75;
}
.icon-basemap{
    background-image: url("../images/basemap.png");
    background-repeat:no-repeat;
    display:inline-block;
    width:16px;
    height:16px;
    margin:7px 0 9px 7px;
