.no-title .icon-basemap-container.embed-bottom-right, .no-title .icon-basemap-container.embed-bottom-left,.no-title .icon-basemap-container.embed-top-right{
    top: $no-title-top + 10;
}
.no-home .icon-basemap-container{
    top: $title-top + 75;
